@model FirstApp.Models.Shape

@{
    ViewBag.Title = "Index";
}

<div class="continer">
    <div class="row">
        <div class="col-md-5">
            <form action="" method="post">
                <p>1 Punto</p>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label" for="X1">X1</label>
                        <input type="text" name="X1" id="X1" class="form-control" value="" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="Y1">Y1</label>
                        <input type="text" name="Y1" id="Y1" class="form-control" value="" />
                    </div>
                </div>
                <p>2 Punto</p>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label" for="X2">X2</label>
                        <input type="text" name="X2" id="X2" class="form-control" value="" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="Y2">Y2</label>
                        <input type="text" name="Y2" id="Y2" class="form-control" value="" />
                    </div>
                </div>
                <p>3 Punto</p>
                <hr />
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label" for="X3">X3</label>
                        <input type="text" name="X3" id="X3" class="form-control" value="" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="Y3">Y3</label>
                        <input type="text" name="Y3" id="Y3" class="form-control" value="" />
                    </div>
                </div>
                <button class="btn btn-outline-dark w-100 rounded-pill border-4 fw-bold">CALCULAR</button>
            </form>
        </div>
        <div class="col-md-7">
            @if(Model != null)
            {
                if(Model.IsTriangle())
                {
                    <div class="p-4 p-md-5">
                        <p class="fs-3 text-primary fw-bold mb-4">Triangulo @Model.GetTypeTriangle()</p>
                        <p class="fs-5"> <span class="text-muted">Area:</span> @Model.GetArea()</p>
                    </div>
                } else
                {
                    <p class="alert alert-danger">No es un Triangulo</p>
                }
            }
        </div>
    </div>
</div>

