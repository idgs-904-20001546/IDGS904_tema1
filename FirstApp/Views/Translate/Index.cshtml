@model FirstApp.Models.Translation

@{
    ViewBag.Title = "Index";
}


<section>
    <div class="container py-4">
        <div class="mb-5">
            <a href="/Translate/Translate">Ir a Traductor</a>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h1 class="mb-4 text-primary fw-bold">Guardar Traduciones</h1>
                <form action="" method="post">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.EsWord, new { htmlAttributes = new { @class = "form-label" } })
                        @Html.EditorFor(model => model.EsWord, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.EnWord, new { htmlAttributes = new { @class = "form-label" } })
                        @Html.EditorFor(model => model.EnWord, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark px-5 py-2 rounded-pill">SAVE</button>
                    </div>
                </form>
                <hr />
                <div class="text-center">
                <form action="/Translate/Show" method="post">
                    <button class="btn btn-outline-primary px-5 py-2 rounded-pill">SHOW</button>
                </form>
                </div>
            </div>
            <div class="col-md-8">
                @if (ViewBag.Translations != null)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ingles</th>
                                <th>Español</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (string item in ViewBag.Translations)
                            {
                                <tr>
                                    @foreach(string tem in item.Split(':'))
                    {

                                    <td>@tem</td>
                    }
                                </tr> <br />
                            }
                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>
</section>

